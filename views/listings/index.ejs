<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col mt-2 mb-2" id="filters">
            <div class="filterOption">
                <div><i class="fa-solid fa-fire-flame-curved"></i></div>
                <p><a href="/listings?category=TRENDING" name="category">Trending</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-bed"></i></div>
                <p><a href="/listings?category=ROOMS" name="category">Rooms</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p><a href="/listings?category=ICONIC CITIES" name="category">Iconic Cities</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-wand-sparkles"></i></div>
                <p><a href="/listings?category=AMAZING VIEWS">Amazing Views</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-hotel"></i></div>
                <p><a href="/listings?category=CASTLES">Castles</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p><a href="/listings?category=AMAZING POOLS">Amazing Pools</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-campground"></i></div>
                <p><a href="/listings?category=CAMPING">Camping</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p><a href="/listings?category=FARMS">Farms</a></p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p><a href="/listings?category=ARCTIC">Arctic</a></p>
            </div>
            <div class="toggle-tax ms-auto">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-body">
                        <div class="card-img-overlay"></div>
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br>
                            &#8377; <%= Number(listing.price).toLocaleString("en-IN") %> / night
                                <i class="tax-info">&nbsp;+ 18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>