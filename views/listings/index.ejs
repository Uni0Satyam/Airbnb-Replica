<% layout("/layouts/boilerplate") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filterOption {
            text-align: center;
            margin-right: 15px;
            opacity: 0.7;
        }

        .filterOption:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filterOption p {
            margin-top: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .toggle-tax {
            border: 1px solid rgba(98, 98, 98, 0.57);
            border-radius: 1rem;
            height: 3.5rem;
            padding: 0.7rem;
            display: flex;
            align-items: center;
        }
    </style>

    <div class="row">
        <div class="col mt-2 mb-2" id="filters">
            <div class="filterOption" onclick>
                <div><i class="fa-solid fa-fire-flame-curved"></i></div>
                <p>Trending</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-wand-sparkles"></i></div>
                <p>Amazing views</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-hotel"></i></div>
                <p>Castles</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </div>
            <div class="filterOption">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="toggle-tax ms-auto">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-imgOverlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br>
                            &#8377; <%= Number(listing.price).toLocaleString("en-IN") %> / night
                                <i class="tax-info">&nbsp;+ 18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>