<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h2>Welcome !</h2>
            <p>Enter your details here to SignUp</p>
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label mt-3">Username</label>
                    <input id="username" name="username" class="form-control" required>
                    <div class="valid-feedback">Username looks good!</div>
                    <div class="invalid-feedback">Please provide a Username!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" type="email" name="email" class="form-control" required>
                    <div class="valid-feedback">Email looks good!</div>
                    <div class="invalid-feedback">Please enter valid email!</div>
                </div>
                <div class="mb-3">
                    <label for="inputPassword5" class="form-label">Password</label>
                    <input type="password" id="inputPassword5" class="form-control" name="password" aria-describedby="passwordHelpBlock"
                        required min="8" max="20">
                    <div class="valid-feedback">Email looks good!</div>
                    <div class="invalid-feedback">Please enter valid password!</div>
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain
                        spaces, special characters, or emoji.
                    </div>

                </div>
                <button type="submit" class="btn btn-outline-danger mb-3">Register</button>
            </form>
        </div>
    </div>